<MudNavMenu>
    <AuthorizeView Roles="User">
        <MudNavLink Icon="@Icons.Material.Rounded.Home" Href="/">Home</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Rounded.Timer" Href="/jobjourney">Journey</MudNavLink>
    </AuthorizeView>
    <AuthorizeView Roles="Admin, Administrador">
        <Authorized>
            <MudNavGroup Icon="@Icons.Material.Rounded.Person" Title="Users" Expanded="false">
                <MudNavLink Icon="@Icons.Material.Rounded.Search" Href="/users">Search User</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Rounded.PersonAdd" Href="/user/create">Create User</MudNavLink>
            </MudNavGroup>



            <MudNavGroup Icon="@Icons.Material.Rounded.Settings" Title="Settings" Expanded="false">
                <MudNavLink Icon="@Icons.Material.Rounded.SettingsApplications" Href="/createroles">Roles</MudNavLink>
            </MudNavGroup>
        </Authorized>
    </AuthorizeView>
</MudNavMenu>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}